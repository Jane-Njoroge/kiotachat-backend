model User {
  id          String  @id @default(uuid())
  fullName    String
  email       String  @unique
  phoneNumber String?
  password    String
  role        Role    @default(USER)
  otps        OTP[]

  userConversations  Conversation[] @relation("UserConversations")
  adminConversations Conversation[] @relation("AdminConversations")

  messages Message[]
}

model Conversation {
  id      String  @id @default(uuid())
  userId  String
  adminId String?

  user  User  @relation("UserConversations", fields: [userId], references: [id])
  admin User? @relation("AdminConversations", fields: [adminId], references: [id])

  messages  Message[]
  createdAt DateTime  @default(now())
}

model Message {
  id             String       @id @default(uuid())
  content        String
  senderId       String
  sender         User         @relation(fields: [senderId], references: [id])
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  createdAt      DateTime     @default(now())
}

model OTP {
  id        String   @id @default(uuid())
  otp       String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  expiresAt DateTime
  createdAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}
